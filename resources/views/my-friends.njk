{% extends 'master' %}
{% block content %}
  <div class="ui vertical part divided">
    <div class="ui  center aligned container">
      <div class="ui grid doubling">

        <div class="wide column" style="margin-top: 20px">
          <div class="ui top attached tabular menu" id="tabs">
            <a class="item active" data-tab="first">My Friends</a>
          </div>
          <div class="ui bottom attached tab segment active" data-tab="first">
            <div class="ui three cards stackable">
              <div class="ui special cards">
                {% for user in users %}
                  <div class="card">
                    <div class="blurring dimmable image">
                      <div class="ui dimmer">
                        <div class="content">
                          <div class="center">
                            <div class="ui inverted button">Remove</div>
                          </div>
                        </div>
                      </div>
                      <img src="{{ user.avatar.full_size }}">
                    </div>
                    <div class="content">
                      <a class="header">{{ user.username }}</a>
                      {#<div class="meta">#}
                      {#<span class="date">Create in Sep 2017</span>#}
                      {#</div>#}
                    </div>
                    {#<div class="extra content">#}
                    {#<a>#}
                    {#<i class="users icon"></i>#}
                    {#85 Friends#}
                    {#</a>#}
                    {#</div>#}
                  </div>
                {% endfor %}
                <div class="ui pagination menu " style="margin-top: 30px">
                </div>
              </div>
              <div class="ui bottom attached tab segment " data-tab="second">
                <div class="ui four cards stackable book-placeholder"></div>
                <div class="ui pagination menu " style="margin-top: 30px"></div>
              </div>
              <div class="ui bottom attached tab segment" data-tab="third">
                <div class="ui four cards stackable book-placeholder"></div>
                <div class="ui pagination menu " style="margin-top: 30px"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
