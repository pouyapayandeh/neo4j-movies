{% extends 'master' %}
{% block content %}
<div class="ui vertical part divided">
    <div class="ui  center aligned container">
        <div class="ui grid doubling">

            <div class="wide column" style="margin-top: 20px">
                <h2 class="center aligned">{{ user.username }}</h2>
                <div class="ui top attached tabular menu" id="tabs">
                    <a class="item active" data-tab="first">Watched Movies</a>
                </div>
                <div class="ui bottom attached tab segment active" data-tab="first">
                    <div class="ui four cards stackable">
                      {%  for movie in watched %}
                        <div class="card">
                            <div class="image">
                              <img class="ui image" src="{{ movie.poster_image }}">
                            </div>
                            <div class="content" style="overflow: hidden">
                              <a href="/movies/{{ movie.id }}/">
                                    <h3 class="ui header">
                                        {{ movie.title }}
                                    </h3>
                                </a>
                            </div>
                        </div>
                      {% endfor %}
                        <div class="ui pagination menu " style="margin-top: 30px">
                        </div>
                    </div>
                </div>
                <div class="ui top attached tabular menu" id="tabs2">
                    <a class="item active" data-tab="first">Added Movies</a>
                </div>
                <div class="ui bottom attached tab segment active" data-tab="first">
                    <div class="ui four cards stackable">
                      {%  for movie in rated %}
                        <div class="card">
                          <div class="image">
                            <img class="ui image" src="{{ movie.poster_image }}">
                          </div>
                          <div class="content" style="overflow: hidden">
                            <a href="/movies/{{ movie.id }}/">
                              <h3 class="ui header">
                                {{ movie.title }}
                              </h3>
                            </a>
                          </div>
                        </div>
                      {% endfor %}
                        <div class="ui pagination menu " style="margin-top: 30px">
                        </div>
                    </div>
                    <div class="ui bottom attached tab segment " data-tab="second">
                        <div class="ui four cards stackable book-placeholder"></div>
                        <div class="ui pagination menu " style="margin-top: 30px"></div>
                    </div>
                    <div class="ui bottom attached tab segment" data-tab="third">
                        <div class="ui four cards stackable book-placeholder"></div>
                        <div class="ui pagination menu " style="margin-top: 30px"></div>
                    </div>
                </div>

                <div class="ui top attached tabular menu" id="tabs3">
                    <a class="item active" data-tab="first">Recommended Movies</a>
                </div>
                <div class="ui bottom attached tab segment active" data-tab="first">
                    <div class="ui four cards stackable">
                        <div class="card">
                            <div class="image">
                                <img class="ui image" src="image url">
                            </div>
                            <div class="content" style="overflow: hidden">
                                <a href="">
                                    <h3 class="ui header">
                                        movie title
                                    </h3>
                                </a>
                            </div>
                            <div class="extra content">
                                <div class="ui  large center ">
                                    <h3 class="ui red header">
                                        movie genre
                                    </h3>

                                </div>
                            </div>
                        </div>
                        <div class="ui pagination menu " style="margin-top: 30px">
                        </div>
                    </div>
                    <div class="ui bottom attached tab segment " data-tab="second">
                        <div class="ui four cards stackable book-placeholder"></div>
                        <div class="ui pagination menu " style="margin-top: 30px"></div>
                    </div>
                    <div class="ui bottom attached tab segment" data-tab="third">
                        <div class="ui four cards stackable book-placeholder"></div>
                        <div class="ui pagination menu " style="margin-top: 30px"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
